@page
@model Sorea_Stefania_Proiect.Pages.Animes.IndexModel

@{
    ViewData["Title"] = "Anime";
}

<h1>Anime</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Anime[0].AnimeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime[0].DebutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime[0].Seasons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime[0].Studio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Anime) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
